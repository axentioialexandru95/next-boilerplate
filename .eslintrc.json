{
    "parserOptions" : {
        "project": "./tsconfig.eslint.json"
    },
    "extends": [
      "airbnb-base",
      "airbnb-typescript/base"
    ],
    "rules": {
      "@typescript-eslint/indent": [2, 2],
      "no-console": "off",
      "import/no-unresolved": [2, { "commonjs": true, "amd": true }],
      "import/named": 2,
      "import/namespace": 2,
      "import/default": 2,
      "import/export": 2,
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "never",
          "jsx": "never",
          "ts": "never",
          "tsx": "never"
        }
    ]
  }
}